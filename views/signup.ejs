<!DOCTYPE html>
<html lang="en">
<head>
   <%- include("./partials/head.ejs") %>
    <title>Signup</title>
</head>
<body>
    <!-- navbar -->
     <%- include("./partials/nav.ejs") %>
    <div class="container mt-4">
        <form action="/user/signup" method="post">
            <div class="mb-3">
                <label for="fullName" class="form-label">fullName</label>
                <input type="taxt" class="form-control" name="fullName" id="fullName" aria-describedby="fullName">
                </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" name="email" placeholder="Rajsharma1234@gmail.com" class="form-control" id="email" aria-describedby="emailHelp">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" name="password" class="form-control" id="password">
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

    </div>

    <%- include("./partials/scripts.ejs") %>
</body>
</html>